{
  "openapi": "3.0.1",
  "info": {
    "title": "Customer API",
    "description": "Lambdas for managing customers",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4566/restapis/d4l0n9z7g8/main/_user_request_/",
